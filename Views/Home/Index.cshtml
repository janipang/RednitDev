@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutHome";
}

<div class="container" style="width:100%; margin:0px; padding:0px;">

    @* paragraph *@
    <section style="width:60%; padding:0px 0vw 5vh 0vw;">
        <h1 style="font-size:55px; color:#FFFFFF; margin:30px 0px; display-4">Join, team up, endless fun awaits!</h1>
        <p style="font-size:20px; color:#FFFFFF; margin:30px 0px;">Looking to expand your group or try exciting
            activities with new friends? You've landed in the perfect spot!</p>
        <button
            onClick="toDiscover()"
            style="position:relative; z-index:10; font-size:24px; background-color:#FFFFFF; color:#FE3C72; font-weight:bold; border:none; border-radius:10px; padding:5px 10px; margin:20px 0px; box-shadow: 0px 10px 80px 0px rgba(0, 0, 0, .2);">
            <p
                style="margin:0px;background:linear-gradient(45deg,#FE3C72, #FF4D00); background-clip: text; -webkit-text-fill-color: transparent;">
                Get Started
            </p>
        </button>
    </section>

    @* cards *@
    <section style="padding:10% 0vw;">
        <div style="margin:0px; display:grid; grid-template: 100%/ 1fr 1fr 1fr; grid-gap: 3%;">
            <div
                style="height:40vh; padding:15% 20%; background-color:#FFFFFF; border-radius:20px; box-shadow: 0px 10px 80px 0px rgba(0, 0, 0, .2); display:flex; flex-direction:column; justify-content:flex-start; align-items:center;">
                <img src="~/svg/find.svg" alt="find_svg" height="87px" width="100px" />
                <h3 style="margin-top:5%; text-align:center;">
                    Find
                </h3>
                <p style="margin-top:5%; text-align:center;">
                    Discover new activity companions and avoid going out alone or having solitary lunches.
                </p>
            </div>
            <div
                style="height:40vh; padding:15% 20%; background-color:#FFFFFF; border-radius:20px; box-shadow: 0px 10px 80px 0px rgba(0, 0, 0, .2); display:flex; flex-direction:column; justify-content:flex-start; align-items:center;">
                <img src="~/svg/joined.svg" alt="join_svg" height="87px" width="100px" />
                <h3 style="margin-top:5%; text-align:center;">
                    Join
                </h3>
                <p style="margin-top:5%; text-align:center;">
                    Discover new activity companions and avoid going out alone or having solitary lunches.
                </p>
            </div>
            <div
                style="height:40vh; padding:15% 20%; background-color:#FFFFFF; border-radius:20px; box-shadow: 0px 10px 80px 0px rgba(0, 0, 0, .1); display:flex; flex-direction:column; justify-content:flex-start; align-items:center;">
                <img src="~/svg/explore.svg" alt="explore_svg" height="87px" width="100px" />
                <h3 style="margin-top:5%; text-align:center;">
                    Explore
                </h3>
                <p style="margin-top:5%; text-align:center;">
                    Discover new activity companions and avoid going out alone or having solitary lunches.
                </p>
            </div>
        </div>
    </section>

    @* statistics *@
    <section style="margin:0% -10vw; padding:5px 10%; background: linear-gradient(to right,#FF4D00, #FE3C72);">
        @* width:100vw; *@
        <div style="margin:20px 5vw; display:grid; grid-template: 1fr / 1fr 1fr 1fr;">
            <div>
                <p style="margin:0px; text-align:center; font-size:36px; font-weight:bold; color:#FFFFFF;">
                    5000
                </p>
                <p style="margin:0px; text-align:center; font-size:20px; color:#FFFFFF;">
                    Members
                </p>
            </div>
            <div>
                <p style="margin:0px; text-align:center; font-size:36px; font-weight:bold; color:#FFFFFF;">
                    1500
                </p>
                <p style="margin:0px; text-align:center; font-size:20px; color:#FFFFFF;">
                    Groups Processed
                </p>
            </div>
            <div>
                <p style="margin:0px; text-align:center; font-size:36px; font-weight:bold; color:#FFFFFF;">
                    1000
                </p>
                <p style="margin:0px; text-align:center; font-size:20px; color:#FFFFFF;">
                    Groups Accomplished
                </p>
            </div>
        </div>

    </section>

    @* hot post *@
    <section style="margin:5vh 0px">
        <div style="margin:3vh; display:flex; flex-direction:row; justify-content:center; align-items:center;">
            <img src="~/svg/fire.svg" alt="fire_svg" height="100%" style="margin:0px 10px;" />
            <h1 style="text-align:center; color:#FF4D00; font-size:36px; font-weight:bold;">Hot post</h1>
            <img src="~/svg/fire.svg" alt="fire_svg" height="100%" style="margin:0px 10px;" />
        </div>

        @* posts container *@
        <div
            style="display:flex; flex-direction:row; justify-content:space-between; overflow-x: auto; flex height:30vh; width:100%;">
            <div class="card" style="width:45%; border-radius:10px; box-shadow: 0px 0px 80px 0px rgba(0, 0, 0, .1); padding:15px;">
                <div class="author-detail" style="display:flex; justify-content:flex-start;">
                    <img class="profile-img" src="https://avatars.githubusercontent.com/u/93817826?v=4" alt="profile" height="60px" width="60px" style="object-fit:cover; border-radius:1000px;">
                    <div class="profile-info" style="margin:0px 15px;">
                        <h3 class="profile-name" style="margin:0px; color:#FD5564; font-size:22px; font-weight:500;">Janipang</h3>
                        <span class="profile-time"
                            style="display:flex; align-items:center; padding:0px;">
                            <img src="~/svg/timegrey.svg" style="margin:0 5px 0 0;"/>
                            <p style="margin:0px; padding:0px; color:grey;">3 hours ago</p>
                        </span>
                    </div>
                </div>
                <div class="text-detail">
                    <h1 style="font-size:24px; font-weight:500;">หาคนทำสมุดระบายสีแจกเด็ก</h1>
                    <p style="font-size:16px;">ต้องการเพื่อนเข้าร่วมกลุ่มอีก 4 คน ขอคนตั้งใจทำงาน ขยัน ไม่อู้ รักศิลปะ ไม่ใช้เอไอในการเจนรูป</p>
                </div>
                <div class="bottom">
                    <div class="placetimetag-detail"></div>
                    <button style="background:#FD5564; border:none; border-radius:10px; font-weight:500; font-size:20px; color:#FFFFFF; padding:10px 25px; box-shadow: 0px 4px 5px 0px rgba(0, 0, 0, .15);">
                        More Detail
                        </button>
                </div>
            </div>
            <div class="card" style="width:45%;">
                <div class="author-detail" style="display:flex; justify-content:flex-start;">
                    <img class="profile-img" src="" profile-1′ alt="profile">
                    <div class=”card-profile-info”>
                        <h3 class=”profile-name”>Eleanor Pea</h3>
                        <p class=”profile-followers”>5.2k followers</p>
                    </div>
                </div>
                <div class="text-detail">
                    <h1>หาคนทำสมุดระบายสีแจกเด็ก</h1>
                    <p>ต้องการเพื่อนเข้าร่วมกลุ่มอีก 4 คน ขอคนตั้งใจทำงาน ขยัน ไม่อู้ รักศิลปะ ไม่ใช้เอไอในการเจนรูป</p>
                </div>
                <div class="bottom">
                    <div class="placetimetag-detail"></div>
                    <button>More Detail</button>
                </div>
            </div>
        </div>
    </section>

</div>
<script>
    function toDiscover(){
        window.location.href = "/home/privacy";
    }
    function toLogin(){
        window.location.href = "/login";
    }
    function toPostDetail(){
        window.location.href = "/post/{postId}";
    }
</script>
