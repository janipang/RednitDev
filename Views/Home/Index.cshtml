@{
    ViewData["Title"] = "Home";
    Layout = "_LayoutHome";
}

<div class="container" style="width:100%; margin:0px; padding:0px;">

    @* paragraph *@
    <section style="width:55%; padding:10vh 0vw;">
        <h1 style="font-size:55px; color:#FFFFFF; margin:30px 0px; display-4">Join, team up, endless fun awaits!</h1>
        <p style="font-size:20px; color:#FFFFFF; margin:30px 0px;">Looking to expand your group or try exciting
            activities with new friends? You've landed in the perfect spot!</p>
        <button
            style="font-size:24px; background-color:#FFFFFF; color:#FE3C72;font-weight:bold; border:none; border-radius:10px; padding:5px 10px; margin:20px 0px; box-shadow: 0px 10px 80px 0px rgba(0, 0, 0, .4);">
            Get Started</button>
    </section>

    @* cards *@
    <section style="padding:10% 5vw;">
        <div style="margin:0px; display:grid; grid-template: 100%/ 1fr 1fr 1fr; grid-gap: 3%;">
            <div
                style="height:40vh; padding:15% 20%; background-color:#FFFFFF; border-radius:20px; box-shadow: 0px 10px 80px 0px rgba(0, 0, 0, .2); display:flex; flex-direction:column; justify-content:flex-start; align-items:center;">
                <img src="~/svg/find.svg" alt="find_svg" height="87px" width="100px" />
                <h3 style="margin-top:5%; text-align:center;">
                    Find
                </h3>
                <p style="margin-top:5%; text-align:center;">
                    Discover new activity companions and avoid going out alone or having solitary lunches.
                </p>
            </div>
            <div
                style="height:40vh; padding:15% 20%; background-color:#FFFFFF; border-radius:20px; box-shadow: 0px 10px 80px 0px rgba(0, 0, 0, .2); display:flex; flex-direction:column; justify-content:flex-start; align-items:center;">
                <img src="~/svg/joined.svg" alt="join_svg" height="87px" width="100px" />
                <h3 style="margin-top:5%; text-align:center;">
                    Join
                </h3>
                <p style="margin-top:5%; text-align:center;">
                    Discover new activity companions and avoid going out alone or having solitary lunches.
                </p>
            </div>
            <div
                style="height:40vh; padding:15% 20%; background-color:#FFFFFF; border-radius:20px; box-shadow: 0px 10px 80px 0px rgba(0, 0, 0, .1); display:flex; flex-direction:column; justify-content:flex-start; align-items:center;">
                <img src="~/svg/explore.svg" alt="explore_svg" height="87px" width="100px" />
                <h3 style="margin-top:5%; text-align:center;">
                    Explore
                </h3>
                <p style="margin-top:5%; text-align:center;">
                    Discover new activity companions and avoid going out alone or having solitary lunches.
                </p>
            </div>
        </div>
    </section>

    @* statistics *@
    <section style="margin:0% -10vw; padding:5px 10%; background: linear-gradient(to right,#FF4D00, #FE3C72);">
        @* width:100vw; *@
        <div style="margin:20px 5vw; display:grid; grid-template: 1fr / 1fr 1fr 1fr;">
            <div>
                <p style="margin:0px; text-align:center; font-size:36px; font-weight:bold; color:#FFFFFF;">
                    5000
                </p>
                <p style="margin:0px; text-align:center; font-size:20px; color:#FFFFFF;">
                    Members
                </p>
            </div>
            <div>
                <p style="margin:0px; text-align:center; font-size:36px; font-weight:bold; color:#FFFFFF;">
                    1500
                </p>
                <p style="margin:0px; text-align:center; font-size:20px; color:#FFFFFF;">
                    Groups Processed
                </p>
            </div>
            <div>
                <p style="margin:0px; text-align:center; font-size:36px; font-weight:bold; color:#FFFFFF;">
                    1000
                </p>
                <p style="margin:0px; text-align:center; font-size:20px; color:#FFFFFF;">
                    Groups Accomplished
                </p>
            </div>
        </div>

    </section>

    @* hot post *@
    <section>
        <div style="margin:auto; display:flex; flex-direction:row; justify-content:center; align-items:center;">
            <img src="~/svg/fire.svg" alt="fire_svg" height="100%" style="margin:0px 10px;" />
            <h1 style="text-align:center; color:#FF4D00; font-size:36px; font-weight:bold;">Hot post</h1>
            <img src="~/svg/fire.svg" alt="fire_svg" height="100%" style="margin:0px 10px;" />
        </div>
        <div style="height:30vh; width:100%;">
            posts
        </div>
    </section>

</div>
<script>
    pp = document.createElement("p");
    pp.textContent = "hello";
    ddiv = document.getElementsByClassName("text-center")[0];
    ddiv.appendChild(pp);
</script>
