<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RednitDev</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RednitDev.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body style="position:relative; min-height:100%; background: linear-gradient(45deg,#FD5564, #FE3C72);">
    <div style="display:flex; flex-direction:column-reverse; justify-content:flex-start; position:absolute; width:100%; height:86%; bottom:15vh; left:0;">
        <div class="background"
            style="z-index:-1; background-color:#FFFFFF; width:100%; height:65%;">
        </div>
        <div class="wave-container" style="position:relative; z-index:-1; height:20vh; width:100%;">
            <div class="wave wave1"></div>
            <div class="wave wave2"></div>
            <div class="wave wave3"></div>
        </div>
    </div>
    <div class="big-container" style="margin:5vh 10vw; padding:0px 0px;">
        <header
            style="display:flex; flex-direction:row; padding:5vh 0vw; height:10vh; justify-content:space-between; align-items: center">
            <div style="display:flex; flex-direction:row; ">
                <img src="~/svg/firewhite.svg" alt="fire_svg" height="35px" style="margin:0px 10px;" />
                <p style="padding:0px 5px; font-size:24px; font-weight:bold; color:#F2F2F2;">Rednit</p>
            </div>
            <div>
                <button
                    style="background-color:inherit; color:#F2F2F2; border:none; border-radius: 5px; padding:5px 20px;">
                    Discover
                </button>
                <button style="background-color: #F2F2F2; border:none; border-radius: 5px; padding:5px 20px;">
                    login
                </button>
            </div>
        </header>

        <div style="">
            <main
                style="width:100%; padding:0px; margin:0px; display:flex; justify-content:center;">
                @RenderBody()
            </main>
        </div>

        <footer
            style="display:flex; flex-direction:row; padding:5vh 0vw; height:15vh; justify-content:space-between; align-items: center">
            <div style="width:100%; display:grid; grid-template: 100%/ 50% 20% 30%;">
                @* logo *@
                <div
                    style="width:100%; display:flex; flex-direction:row; justify-content:flex-start; align-items:center;">
                    <img src="~/svg/firewhite.svg" alt="fire_svg" height="35px" style="margin:0px 10px;" />
                    <h1 style="text-align:center; color:#FFFFFF; font-size:36px; font-weight:bold;">Rednit</h1>
                </div>

                @* follow us *@
                <div style="width:100%;">
                    <p style="font-size:20px; font-weight:bold; color:#FFFFFF;">Follow us</p>
                    <div style="display:flex; flex-direction:row; ">
                        <img src="~/svg/instagramwhite.svg" alt="instagramwhite_svg" width="15%"
                            style="margin-right: 5px;" />
                        <img src="~/svg/facebookwhite.svg" alt="facebookwhite_svg" width="15%"
                            style="margin-right: 5px;" />
                        <img src="~/svg/githubwhite.svg" alt="githubwhite_svg" width="15%" style="margin-right: 5px;" />
                        <img src="~/svg/youtubewhite.svg" alt="youtubewhite_svg" width="15%"
                            style="margin-right: 5px;" />
                    </div>
                </div>

                @* contact *@
                <div style="display:flex; flex-direction:column;">
                    <p style="margin:0px; font-size:20px; font-weight:bold; color:#FFFFFF">Contact us</p>
                    <div style="display:flex; flex-direction:row; align-items:center;">
                        <img src="~/svg/callwhite.svg" alt="callwhite_svg" width="7%" style="margin-right:5px;" />
                        <p style="margin:0px; color:#FFFFFF">090-000-0000</p>
                    </div>
                    <div style="display:flex; flex-direction:row; align-items:center;">
                        <img src="~/svg/mailwhite.svg" alt="mailwhite_svg" width="7%" style="margin-right:5px;" />
                        <p style="margin:0px; color:#FFFFFF">RednitGroup@gmail.com</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
